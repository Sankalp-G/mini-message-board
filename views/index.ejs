<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1><%= title %></h1>
    <p>Welcome to <%= title %></p>

    <a href="/new">
      <button class="new_button">New Message</button>
    </a>

    <% messages.forEach((message) => { %>
      <div class="card">
        <h3><%= message.user %></h3>
        <p><%= message.text %></p>
        <small><%= message.added %></small>
      </div>
    <% }); %>
  </body>
</html>
